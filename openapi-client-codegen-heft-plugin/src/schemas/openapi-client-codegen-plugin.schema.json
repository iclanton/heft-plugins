{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",

  "additionalProperties": false,

  "required": ["openapiVersion", "sourceFile", "outputFolderPath"],
  "properties": {
    "openapiVersion": {
      "type": "string"
    },
    "sourceFile": {
      "type": "string"
    },
    "outputFolderPath": {
      "type": "string"
    },
    "additionalOptions": {
      "type": "object",
      "patternProperties": {
        ".+": {
          "type": "string"
        }
      }
    }
  }
}
